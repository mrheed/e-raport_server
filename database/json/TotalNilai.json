[

    {"$sort": {"duh.tanggal_ulangan": 1}},
        {"$group": {
            "_id": "$nis",
            "nama": {"$first": "$nama"},
            "kelas": {"$first": "$jurusan"},
            "tahun_masuk": {"$first": "$tahun_masuk"},
            "remidi": {"$push": {"$cond": ["$duh.remidi", 1, 0]}},
            "data_uh": {"$push": {
                "nilai_uh": {"$cond": ["$duh.telah_remidi", "$duh.nilai_remidi", "$duh.nilai_ulangan"]},
                "kkm": "$duh.kkm",
                "tanggal_uh": "$duh.tanggal_ulangan"
            }},
            "avg_uh": {"$avg": {"$cond": ["$duh.telah_remidi", "$duh.nilai_remidi", "$duh.nilai_ulangan"]}},
            "jml_uh": {"$push": {"$cond": ["$duh.telah_remidi", "$duh.nilai_remidi", "$duh.nilai_ulangan"]}}
    }},
    {
        "$project": {
            "_id": 1,
            "nama": 1,
            "kelas": 1,
            "tahun_masuk": 1,
            "remidi": 1,
            "data_uh": 1,
            "avg_uh": {"$divide":[
                {"$subtract":[
                     {"$multiply":["$avg_uh",100]},
                     {"$mod":[{"$multiply":["$avg_uh",100]}, 1]}
                ]},
                100
           ]},
           "jml_uh": 1
        }
    },
    {
        "$project": {
            "_id": 1,
            "nama": 1,
            "kelas": {
                "tahun": "$tahun_masuk",
                "jurusan": "$kelas.label"
            },
            "data_uh": 1,
            "remidi": {"$sum": "$remidi"},
            "jml_uh": {"$sum": {"$size": "$jml_uh"}},
            "avg_uh": 1
        }
    },
    {"$sort": {"_id": 1}},
    {"$sort": {"avg_uh": -1}},
    {"$group": {
        "_id": "$kelas",
        "data": {"$push": {
            "nis": "$_id",
            "nama": "$nama",
            "avg_uh": "$avg_uh",
            "kelas": "$kelas",
            "data_uh": "$data_uh",
            "remidi": "$remidi",
            "jml_uh": "$jml_uh"
        }}
    }},
    {"$unwind": {
        "path": "$data",
        "includeArrayIndex": "ai"
    }},
    {"$project": {
        "_id": 0,
        "nis": "$data.nis",
        "nama": "$data.nama",
        "avg_uh": "$data.avg_uh",
        "remidi": "$data.remidi",
        "kelas": "$data.kelas",
        "data_uh": "$data.data_uh",
        "jml_uh": "$data.jml_uh",
        "rank_kelas": {"$add": ["$ai", 1]}
    }},
    {"$sort": {"nis": 1}},
    {"$sort": {"avg_uh": -1}},
    {"$group": {
        "_id": "$kelas.tahun",
        "data": {"$push": {
            "nis": "$nis",
            "nama": "$nama",
            "avg_uh": "$avg_uh",
            "kelas": "$kelas",
            "data_uh": "$data_uh",
            "remidi": "$remidi",
            "jml_uh": "$jml_uh",
            "rank_kelas": "$rank_kelas"
        }}
    }},
    {"$unwind": {
        "path": "$data",
        "includeArrayIndex": "ai"
    }},
    {"$project": {
        "_id": "$data.nis",
        "nama": "$data.nama",
        "avg_uh": "$data.avg_uh",
        "kelas": "$data.kelas",
        "data_uh": "$data.data_uh",
        "remidi": "$data.remidi",
        "jml_uh": "$data.jml_uh",
        "rank_kelas": "$data.rank_kelas",
        "rank_sekolah": {"$add": ["$ai", 1]}
    }}
]